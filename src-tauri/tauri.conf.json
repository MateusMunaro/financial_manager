{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1.5.3/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "Financial Manager",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Finance",
      "copyright": "",
      "icon": ["icons/icon.png"],
      "identifier": "com.financial-manager.dev",
      "shortDescription": "Financial Manager Application",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Financial Manager",
        "width": 1200
      }
    ]
  }
}
